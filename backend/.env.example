# ===========================================
# FleetFuel Backend - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Django Core
# ------------------------------------------
# REQUIRED in production: Generate with `python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"`
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
# For production, add your domain: localhost,127.0.0.1,yourdomain.com,*.ngrok-free.dev
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
# ------------------------------------------
DB_NAME=fleetfuel
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis (for Celery background tasks)
# ------------------------------------------
REDIS_URL=redis://localhost:6379/0

# CORS (Cross-Origin Resource Sharing)
# ------------------------------------------
# Comma-separated list of allowed origins for CORS
# For production, add your frontend URL
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000
# Optional regex list (comma-separated), e.g. ^https://.*\\.ngrok-free\\.app$
CORS_ALLOWED_ORIGIN_REGEXES=
# CSRF trusted origins (comma-separated), e.g. https://*.ngrok-free.app
CSRF_TRUSTED_ORIGINS=

# JWT Cookie Settings (optional)
# ------------------------------------------
# JWT_COOKIE_SECURE=True  # Set to True in production (requires HTTPS)
# JWT_COOKIE_DOMAIN=.yourdomain.com  # Set for cross-subdomain cookies
# JWT_COOKIE_SAMESITE=Lax

# Security Headers / HTTPS
# ------------------------------------------
# Force HTTPS redirects in production
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# Email Configuration
# ------------------------------------------
# For development: use console backend (prints to stdout)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production: use SMTP backend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=frotas@topnet.com.br

# Comma-separated list of emails to receive critical alerts
ALERT_NOTIFICATION_EMAILS=admin@topnet.com.br
